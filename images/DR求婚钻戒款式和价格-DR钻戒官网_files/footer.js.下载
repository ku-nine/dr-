				}).off('mouseleave').on('mouseleave',function(){			
					$(this).removeClass('dr_quickcort-hover').find('.dr_quick-wordGoTop').stop(false,false).animate({right:'0',opacity:0},500).hide();
				});

		    } else if (scrollTop <= 200) {
		        //$('#dr-quickservice').hide();
		        $('.dr_totopView .dr_totop,.dr_totopView .dr_quick-wordGoTop').css('display','none');
		        $('.dr_totopView').off('mouseenter').off('mouseleave');
