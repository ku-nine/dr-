		function checkScroll() {
		    scrollTop = $(document).scrollTop();
		    if (scrollTop >= 200 & offon) {
		    	offon = false;
		        //$('#dr-quickservice').show();
		        $('.dr_totopView .dr_totop,.dr_totopView .dr_quick-wordGoTop').css('display','block');
